#!/bin/bash

echo "Hi cheshire cat"
# create a new temp file with process id
tempfile="tmpfile$$"
echo $tempfile

# Check for the correct number of arguments
# There should be only 1 or 2 arguments
#   $# returns the num of arguements
# exit 1 if incorrect numbers of parameters
if [[ "$#" -gt 2 || "$#" -lt 1 ]]
then
  echo "./stats {-rows|-cols} [file]" 1>&2
  exit 1
fi

# open the score file which is represented by $2
input=$2
#echo $input

while read line
do
  echo $line
  # for each row, the array must be cleared to 0 elements!
  numArr=()
  numElementsInRow=0
  numArr=("${numArr[@]}" $line)

  sum=0
  for i in ${numArr[@]}
    do
      numElementsInRow=$((numElementsInRow + 1))
      sum=$((sum + i))
    done

  echo "The row sum is $sum"
  echo "The number of elements is: $numElementsInRow"
done < $input
